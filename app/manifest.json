{
  "name": "StoryPoint for Asana",
  "version": "0.1.0",
  "manifest_version": 3,
  "description": "track your scrum story points on your Asana board.",
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "js": [
        "scripts/contentscript.js"
      ],
      "matches": [
        "https://app.asana.com/*"
      ]
    }
  ],
  "host_permissions": [
    "https://app.asana.com/*"
  ],
  "permissions": [
    "scripting"
  ]
}
